<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.dvmaytinh.thanhtu.lichchieuphim.Comment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView
            android:id="@+id/lvComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="10dp"
            >
        </com.github.paolorotolo.expandableheightlistview.ExpandableHeightListView>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/CManhien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Gởi bình luận của bạn:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/txtTenCM"
            android:hint="Nhập tên của bạn" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEmailCM"
            android:hint="Nhập email của bạn" />

        <TextView
            android:text="Đánh giá phim này:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:rating="4"
            android:numStars="5"
            android:id="@+id/ratingBar"
            android:isIndicator="false"
            />

        <TextView
            android:text="Bình luận:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="top|left"
            android:id="@+id/txtComment"
            android:hint="Nhập bình luận của bạn" />

        <Button
            android:text="Gởi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSendCM" />
</LinearLayout>
    </LinearLayout>
</RelativeLayout>
